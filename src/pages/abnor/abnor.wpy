<script>
  import wepy from 'wepy'

  export default class Abnor extends wepy.page {
    config = {
      navigationBarTitleText: 'abnor',
      usingComponents: {
        'wxc-abnor': '../../minui/wxc-abnor/dist/index'
      }
    }

    data = {
