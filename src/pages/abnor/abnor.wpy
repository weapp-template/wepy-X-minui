      tip: '自定义副标题',
      button: '点我'
    }

    methods = {
      showpopup(index) {
        let popupComponent = this.$wxpage.selectComponent('.wxc-popup' + index)
        popupComponent && popupComponent.show()
      },
      onCancel(index) {
        let popupComponent = this.$wxpage.selectComponent('.wxc-popup' + index)
        popupComponent && popupComponent.hide()
      }
    }

